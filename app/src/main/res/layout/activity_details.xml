<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="robinben.hsr.ch.aesboeboe.DetailsActivity"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:columnCount="4"
        android:rowCount="2">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="von:"
            android:id="@+id/tvFrom"
            android:layout_row="0"
            android:layout_column="0" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="resultFrom"
            android:id="@+id/tvResultFrom"
            android:layout_row="0"
            android:layout_column="1" />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="nach:"
            android:id="@+id/tvTo"
            android:layout_row="1"
            android:layout_column="0" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="resultTo"
            android:id="@+id/tvResultTo"
            android:layout_row="1"
            android:layout_column="1" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Datum:"
            android:id="@+id/tvDate"
            android:layout_row="0"
            android:layout_column="2" />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="00.00.0000"
            android:id="@+id/tvResultDate"
            android:layout_row="0"
            android:layout_column="3" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Zeit (ab):"
            android:id="@+id/tvTime"
            android:layout_row="1"
            android:layout_column="2" />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="resultTime"
            android:id="@+id/tvResultTime"
            android:layout_row="1"
            android:layout_column="3" />
    </GridLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/detailsView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.75" />

</LinearLayout>
