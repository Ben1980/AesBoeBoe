<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Main">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="von"
        android:id="@+id/etFromField" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nach"
        android:id="@+id/etToField"

        android:layout_below="@id/etFromField"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Abfahrt"
        android:id="@+id/tvSearchDirection"
        android:layout_below="@+id/etDateField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="Datum"
        android:ems="10"
        android:id="@+id/etDateField"
        android:layout_below="@+id/etToField"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:text="Zeit"
        android:ems="10"
        android:id="@+id/etTimeField"
        android:layout_below="@+id/tvSearchDirection"
        android:layout_alignRight="@+id/etToField"
        android:layout_alignEnd="@+id/etToField" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suchen"
        android:id="@+id/btSearch"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/etTimeField"
        android:layout_alignEnd="@+id/etTimeField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
